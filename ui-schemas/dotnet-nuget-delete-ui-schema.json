{
  "type": "VerticalLayout",
  "elements": [
    {
      "type": "Control",
      "label": "NuGet server URL",
      "scope": "#/properties/server-url",
      "options": {
        "placeholder": "https://api.nuget.org/v3/index.json"
      }
    },
    {
      "type": "Control",
      "label": "Package ID and version",
      "scope": "#/properties/package-id",
      "options": {
        "placeholder": "MyPackage 1.0.0"
      }
    },
    {
      "type": "Control",
      "label": "API key",
      "scope": "#/properties/api-key"
    },
    {
      "type": "DockerImageControl",
      "label": "Docker image",
      "scope": "#/properties/docker-image"
    },
    {
      "type": "AdvancedSettingsSection",
      "elements": [
        {
          "type": "Control",
          "label": "Logging verbosity",
          "scope": "#/properties/logging"
        },
        {
          "type": "Control",
          "label": "Command line parameters",
          "scope": "#/properties/args",
          "options": {
            "placeholder": "additional command line parameters"
          }
        },
        {
          "type": "Control",
          "label": "Required SDK",
          "scope": "#/properties/sdk",
          "options": {
            "placeholder": "e.g. 8.0 or 4.8.1"
          }
        }
      ]
    }
  ]
}
